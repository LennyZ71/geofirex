{
    "name": "geofirex",
    "version": "0.0.6",
    "description": "Realtime Firestore GeoQueries with RxJS",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/codediodeio/geofirex.git"
    },
    "scripts": {
        "test": "jest --coverage --forceExit",
        "test:watch": "jest --watchAll",
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "publish": "",
        "doc": "typedoc --out dochtml src --excludeExternals --excludePrivate --mode file --theme markdown --mdEngine github"
    },
    "keywords": [
        "rxjs",
        "firebase",
        "geofire",
        "geohash",
        "map",
        "firestore"
    ],
    "author": "Jeff Delaney",
    "license": "ISC",
    "peerDependencies": {
        "rxjs": "^6.2.1",
        "firebase": "^5.2.0"
    },
    "devDependencies": {
        "@firebase/firestore-types": "^1.4.4",
        "@turf/bearing": "^6.0.1",
        "@turf/distance": "^6.0.1",
        "@turf/turf": "^5.1.6",
        "@types/chance": "^1.0.6",
        "@types/faker": "^4.1.5",
        "@types/geojson": "^7946.0.7",
        "@types/jest": "^24.0.18",
        "@types/lodash": "^4.14.137",
        "@types/ngeohash": "^0.6.2",
        "@types/turf": "^3.5.32",
        "chance": "^1.0.18",
        "faker": "^4.1.0",
        "firebase": "^6.4.0",
        "jest": "^24.9.0",
        "lodash": "^4.17.15",
        "rollup": "1.19.4",
        "rollup-plugin-analyzer": "^3.1.2",
        "rollup-plugin-commonjs": "10.0.2",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-sizes": "^0.5.1",
        "rollup-plugin-typescript2": "0.22.1",
        "rollup-plugin-uglify": "^6.0.2",
        "rxjs": "^6.5.2",
        "rxjs-compat": "^6.5.2",
        "ts-jest": "^24.0.2",
        "ts-loader": "6.0.4",
        "ts-node": "8.3.0",
        "tslint": "5.18.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-markdown": "^2.1.3",
        "typescript": "3.5.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
